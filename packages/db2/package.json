{
  "name": "@dakthar/db2",
  "version": "0.1.0",
  "private": true,
  "main": "./index.ts",
  "types": "./index.ts",
  "scripts": {
    "clean": "rm -rf .turbo node_modules",
    "lint": "eslint .",
    "push": "drizzle-kit push:mysql",
    "studio": "drizzle-kit studio",
